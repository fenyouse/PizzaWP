<?xml version="1.0" encoding="utf-8"?>

<!-- Fichier de descriptions des commandes vocales -->
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.0">

  <!-- Groupe de commandes associées à une langue précise -->
  <CommandSet xml:lang="Fr-fr" Name="commandesFR">

    <!-- Premier mot de la commande, souvent le nom de l'appli : Cette commande sera la première chose que Cort ana attendra lorsque vous parlez -->
    <CommandPrefix>Pizza Pizza</CommandPrefix>
    <!-- Exemple de commande : affichée à l'utilisateur afin qu'il comprenne le fonctionnement -->
    <Example>Ecrire texte 1</Example>
 
    <!-- Définition d'une commande -->
    <Command Name="Accueil Pizza">
      <Example>Accueil</Example>
      <ListenFor>Accueil</ListenFor>
      <!--  [optionnel] {variable référencée par PhraseList}-->
      <Feedback>Accueil</Feedback>
      <!-- Message retourné à l'utilisateur lors de l'utilisation de la commande -->
      <Navigate Target="Accueil.xaml" />
      <!-- Page de redirection -->
    </Command>

    <!-- Définition d'une commande -->
    <Command Name="Découpage">
      <Example>Découpage</Example>
      <ListenFor>Découpage</ListenFor>
      <!--  [optionnel] {variable référencée par PhraseList}-->
      <Feedback>Découpage</Feedback>
      <!-- Message retourné à l'utilisateur lors de l'utilisation de la commande -->
      <Navigate Target="Decoupage.xaml" />
      <!-- Page de redirection -->
    </Command>
    
      
    <!-- Définition d'une commande -->
    <Command Name="Recette Pizza">
      <!-- Example sera la commande attendue par Cortana en entrée voix ! -->
      <Example>Recette</Example>
      <ListenFor>Recette</ListenFor>
      <!--  [optionnel] {variable référencée par PhraseList}-->
      <Feedback>Recette</Feedback>
      <!-- Message retourné à l'utilisateur lors de l'utilisation de la commande -->
      <Navigate Target="Recette.xaml" />
      <!-- Page de redirection -->
    </Command>


  </CommandSet>
</VoiceCommands>



